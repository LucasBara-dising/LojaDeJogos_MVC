@model LojaDeJogos.Models.Cliente
@{
    ViewBag.Title = "IndexCliente";
}

<h2>Cliente</h2>
@using (Html.BeginForm())
{@Html.ValidationSummary(true)
    <fieldset>
        <!--NomeCli-->
        <div class="editor-label">@Html.LabelFor(m => m.NomeCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.NomeCli)
            @Html.ValidationMessageFor(m => m.NomeCli)
        </div>

        <!--CPFCli-->
        <div class="editor-label">@Html.LabelFor(m => m.CPFCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.CPFCli, new { htmlAttributes = new { placeholder = "000.000.000-00" } })
            @Html.ValidationMessageFor(m => m.CPFCli)
        </div>

        <!--DatNascCli-->
        <div class="editor-label">@Html.LabelFor(m => m.DatNascCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.DatNascCli, new { htmlAttributes = new { placeholder = "00/00/0000" } })
            @Html.ValidationMessageFor(m => m.DatNascCli)
        </div>

        <!--EnderecoCli-->
        <div class="editor-label">@Html.LabelFor(m => m.EnderecoCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.EnderecoCli)
            @Html.ValidationMessageFor(m => m.EnderecoCli)
        </div>

        <!--CelularCli-->
        <div class="editor-label">@Html.LabelFor(m => m.CelularCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.CelularCli, new { htmlAttributes = new { placeholder = "11 9999-9999" } })
            @Html.ValidationMessageFor(m => m.CelularCli)
        </div>
        <!--EmailCli-->
        <div class="editor-label">@Html.LabelFor(m => m.EmailCli)</div>
        <div class="editor-field">
            @Html.EditorFor(m => m.EmailCli)
            @Html.ValidationMessageFor(m => m.EmailCli)
        </div>

        <div><br/><input type="submit" value="Enviar"/></div>
    </fieldset>
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
 }
